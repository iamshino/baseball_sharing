<p id="notice"><%= notice %></p>

<h1>記事一覧</h1>

<% if user_signed_in? %>
  <%= link_to '記事作成', new_article_path, class: "btn btn-info" %>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ブランド名</th>
      <th scope="col">コンセプト</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td>
          <%= link_to '詳細', article, class: "btn btn-success" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "最終確認用ボタン", "#", class: "btn btn-primary" %>
